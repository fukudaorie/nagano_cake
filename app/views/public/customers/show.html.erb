<div class = "container">

<h2>マイページ</h2>
<div class = "row mb-1">
<div class = "col-md-1 d-flex align-items-center">登録情報</div>
<%= link_to "編集する", edit_public_customer_path(current_customer), class: "btn btn-success" %>
</div>
<div class = "row">
<table class = "table table-bordered">
  <tr>
    <th class = "col-md-2 table-secondary">氏名</th>
    <td class = "col-md-6"><%= @customer.last_name + " " +@customer.first_name %></td>
  </tr>
    <tr>
    <th class = "table-secondary">カナ</th>
    <td><%= @customer.last_name_kana + " " +@customer.first_name_kana %></td>
  </tr>
    <tr>
    <th class = "table-secondary">郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
    <tr>
    <th class = "table-secondary">住所</th>
    <td><%= @customer.address %></td>
  </tr>
    <tr>
    <th class = "table-secondary">電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
    <tr>
    <th class = "table-secondary">メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>
</div>
<div class = "row mb-1">
<div class = "h5 d-flex align-items-center col-md-2">配送先</div><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary col-md-2" %>
</div>
<div class = "row">
<div class = "h5 d-flex align-items-center col-md-2">注文履歴</div><%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary col-md-2" %>
</div>
</div>