<div class = "container">
  <h2>会員情報編集</h2>
  <%= form_with model: @customer, url: public_customer_path do |f| %>
  <div class="form-group row">
    <%= f.label "名前", class: "col-md-2" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control col-md-2 mr-5' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name", class: 'form-control col-md-2' %><br />
  </div>
  <div class="form-group row">
    <%= f.label "フリガナ", class: "col-md-2" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control col-md-2 mr-5' %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control col-md-2' %><br />
  </div>
  <div class="form-group row">
    <%= f.label "郵便番号", class: "col-md-2" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control col-md-2' %><br />
  </div>
  <div class="form-group row">
    <%= f.label "住所", class: "col-md-2" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control col-md-6' %><br />
  </div>
  <div class="form-group row">
    <%= f.label "電話番号", class: "col-md-2" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: 'form-control col-md-2' %><br />
  </div>
  <div class="form-group row">
    <%= f.label "メールアドレス", class: "col-md-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-controlcol-md-2' %><br/>
  </div>
  <div class = "row">
    <%= f.submit "編集内容を保存", class: "col-md-2 btn btn-success" %>
    <div class = "col-md-3"></div>
    <%= link_to "退会する", unsubscribe_public_customers_path, class: "btn btn-danger col-md-1" %>
  </div>
  <% end %>
</div>