<h2>会員情報編集</h2>
<%= form_with model: @customer, url: public_customer_path do |f| %>
<%= f.label "名前" %>

  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  
  <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name" %><br />
  <%= f.label "フリガナ" %>
  
  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  
  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %><br />

  <%= f.label "郵便番号を" %>
  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %><br />
  <%= f.label "住所" %>
  <%= f.text_field :address, autofocus: true, autocomplete: "address" %><br />
  <%= f.label "電話番号" %>
  <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %><br />
  <%= f.label "メールアドレス" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br/>
  <%= f.submit "編集内容を保存" %>
  <% end %>