<div class = "container">
  <div class = "row">
    <div class = "ml-5 mb-3">
      <h3>配送先登録/一覧</h3>
    </div>
  </div>
    <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
    <div class="form-group row">
      <%= f.label "郵便番号(ハイフンなし)", class: "col-md-3" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: 'form-control col-md-2' %><br />
    </div>
    <div class="form-group row">
      <%= f.label "住所", class: "col-md-3" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control col-md-6' %><br />
    </div>
    <div class="form-group row">
      <%= f.label "宛名", class: "col-md-3" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子", class: 'form-control col-md-2' %><br />
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <div class = "col-md-3"></div>
      <%= f.submit "新規登録", class: 'btn btn-success col-md-2' %>
    </div>
    <% end %>
  <div class = "row">
    <div class = "col-md-10">
    <table class = "table table-bordered">
      <thead class = "table-secondary">
        <tr>
          <th class = "col-md-2">郵便番号</th>
          <th class = "col-md-5">住所</th>
          <th class = "col-md-2">宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_public_address_path(address), class: "btn btn-success" %> <%= link_to "削除する", public_address_path(address), method: :delete, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>