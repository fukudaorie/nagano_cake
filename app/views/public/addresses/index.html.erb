<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
<%= f.label "郵便番号(ハイフンなし)" %>
<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %><br />
<%= f.label "住所" %>
<%= f.text_field :address, autofocus: true, autocomplete: "address" %><br />
<%= f.label "宛名" %>
<%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.submit "新規登録" %>
<% end %>

<table class = "table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_public_address_path(address) %><%= link_to "削除する", public_address_path(address), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>