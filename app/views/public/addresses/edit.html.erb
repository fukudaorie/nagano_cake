<div class = "container">
  <div class = "ml-5 mb-3">
    <h3>配送先編集</h3>
  </div>
<%= form_with model: @address, url: public_address_path, method: :patch do |f| %>
<div class="form-group row">
  <%= f.label "郵便番号(ハイフンなし)", class: "col-md-3" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control col-md-2' %><br />
</div>
<div class="form-group row">
  <%= f.label "住所", class: "col-md-3" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control col-md-6' %><br />
</div>
<div class="form-group row">
  <%= f.label "宛名", class: "col-md-3" %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control col-md-2' %><br />
  <div class = "col-md-3"></div>
    <%= f.submit "変更内容を保存", class: "btn btn-success " %>
</div>
<% end %>
</div>