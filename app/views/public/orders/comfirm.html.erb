<h2>注文情報確認</h2>
<table class = "table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <% if cart_item.item.image.attached? %>
          <%= image_tag cart_item.item.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
     <% @total += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>

<table class = "table">
  <tr>
    <th>送料</th>
    <td><%= @shipping_cost %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @shipping_cost + @total %></td>
  </tr>
</table>
<p>支払い方法</p>
<%= @order.payment_method_i18n %>

<p>お届け先</p>
<%= @order.address %>

<%= form_with model: @cart_item, url: public_orders_path, method: :post do |f| %>
<%= f.hidden_field :item_id, :value => current_customer.items %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.hidden_field :amount, :value => @cart_item.amount %>
<%= f.submit "注文を確定する" %>
<% end %>