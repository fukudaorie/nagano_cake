<h2>注文情報入力</h2>
<%= form_with model: @order, url: comfirm_public_orders_path, method: :post, local: true do |f| %>
<p>支払方法</p><br />
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br />

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%><br />

<p>お届け先</p><br />
<%= f.radio_button :address, 0 %>
<%= f.label :address, "ご自身の住所" %><br />
<%= "〒" + current_customer.postal_code + " " + current_customer.address %><br />
<%= current_customer.full_name %><br />

<%= f.radio_button :address, 1 %>
<%= f.label "登録済住所から選択" %><br />
<%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %><br />

<%= f.radio_button :address, 2 %>
<%= f.label "新しいお届け先" %><br />
<%= f.label "郵便番号を(ハイフンなし)" %>
<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %><br />
<%= f.label "住所" %>
<%= f.text_field :new_address, autofocus: true, autocomplete: "address" %><br />
<%= f.label "宛名" %>
<%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />
<%= f.submit "確認画面に進む" %>
<% end %>
