<h2>ショッピングカート</h2>
<table class = "table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td>
        <%= image_tag cart_item.item.image, size: "100x100" %>
        <%= cart_item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price %></td>
      <td>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit '変更' %>
      </td>
      <td><%= cart_item.item.subtotal %></td>
      <td><%= link_to "削除する", destroy_cart_item_path(@cart_item.id), method: :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>