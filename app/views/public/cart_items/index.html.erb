<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete %>
<table class = "table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @total = 0 %>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td>
        <% if cart_item.item.image.attached? %>
          <%= image_tag cart_item.item.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url: public_cart_item_path(cart_item) do |f| %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit '変更' %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %></td>
      <% @total += cart_item.subtotal %>
    </tr>
  </tbody>
  <% end %>
</table>

<%= link_to "買い物を続ける", public_items_path %>
<%= @total %>
<%= link_to "情報入力に進む", new_public_order_path %>