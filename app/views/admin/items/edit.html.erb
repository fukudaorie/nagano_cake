<div class = "container">
  
  <h3 class = "ml-5 mb-5">商品編集</h3>
  <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
  <div class = "row mb-3">
    <div class = "col-md-2">
      <%= f.label "商品画像" %>
    </div>
    <div class = "col-md-3">
      <%= f.file_field :image, accept: "image/*" %><br />
    </div>
  </div>
  <div class = "row mb-3">
    <div class = "col-md-2">
      <%= f.label "商品名" %>
    </div>
    <%= f.text_field :name, class: "form-control col-md-3" %>
  </div>
  <div class = "row mb-3">
    <div class = "col-md-2">
      <%= f.label "商品説明" %>
    </div>
    <%= f.text_area :introduction, class: "form-control col-md-3" %>
  </div>
  <div class = "row mb-3">
    <div class = "col-md-2">
      <%= f.label "ジャンル" %>
    </div>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, class: "form-control col-md-3" %>
  </div>
  <div class = "row mb-3">
    <div class = "col-md-2">
      <%= f.label "税抜価格" %>
    </div>
    <%= f.text_field :price, class: "form-control col-md-3" %>円
  </div>
  <div class = "row mb-3">
    <div class = "col-md-2">
      <%= f.label "販売ステータス" %>
    </div>
    <div class = "col-md-4">
      <%= f.radio_button :is_active, :true, checked: true %>
      <%= f.label :is_active, '販売中' %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, '販売停止中' %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-md-6 mx-auto">
    <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>