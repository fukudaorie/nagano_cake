<div class = "container">
  <h3 class = "ml-5 mb-5">商品詳細</h3>
  <div class = "row">
    <div class = "col-md-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>
    <div class = "col-md-9">
      <div class = "row mb-3">
        <div class = "col-md-2">
          <label>商品名</label>
        </div>
        <div class = "col-md-5">
          <%= @item.name %>
        </div>
      </div>
      <div class = "row mb-3">
        <div class = "col-md-2">
          <label>商品説明</label>
        </div>
        <div class = "col-md-5">
          <%= @item.introduction %>
        </div>
      </div>
      <div class = "row mb-3">
        <div class = "col-md-2">
          <label>ジャンル</label>
        </div>
        <div class = "col-md-5">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class = "row mb-3">
        <div class = "col-md-2">
          <label>税込価格<br />(税抜価格)</label>
          </div>
        <div class = "col-md-5 d-flex align-items-center">
          <%= @item.add_tax_price %>
          (<%= @item.price %>)円
        </div>
      </div>
      <div class = "row mb-3">
        <div class = "col-md-2">
          <label>販売ステータス</label>
        </div>
        <div class = "col-md-5">
          <% if @item.is_active %>
          <div class = "text-success">
            販売中
          </div>
          <% else %>
          <div class = "text-secondary">
            販売停止中
          </div>
          <% end %>
        </div>
      </div>
      <div class = "row">
         <div class = "col offset-md-1">
          <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success col-md-2" %>
        </div>
      </div>
    </div>
  </div>
</div>