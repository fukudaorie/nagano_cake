<div class = "container">
  <h3 class = "mb-3">注文履歴一覧</h3>
  <div class = "row">
    <div class = "col-10">
      <table class = "table">
        <thead class = "table-secondary">
          <tr>
            <th class = "col-md-2">購入日時</th>
            <th class = "col-md-2">購入者</th>
            <th class = "col-md-2">注文個数</th>
            <th class = "col-md-2">注文ステータス</th>
          </tr>
          </thead>
          <% @orders.each do |order| %>
          <tbody>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
            <td><%= order.customer.full_name %></td>
            <% total_amount = 0 %>
            <td>
              <% order.order_details.each do |order_detail| %>
              <% total_amount += order_detail.amount %>
              <% end %>
              <%= total_amount %>
              
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
  <%= paginate @orders %>
</div>