<div class = "container">
<h3 class = "ml-5">ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path ,method: :POST do |f| %>
<div class = "row mb-5">
  <%= f.label "ジャンル名", class: "mr-5" %>
  <%= f.text_field :name, class: "mr-5"%>
  <%= f.submit "新規登録", class: "btn btn-success" %>
</div>
<% end %>
<div class = "row">
<table class = "table col-md-4">
  <thead class = "table-secondary">
    <tr>
      <th><div class = "ml-5">ジャンル</div></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td>
        <%= genre.name %>
        <div class = "text-right">
          <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
        </div>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>