<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre do |f| %>
  <label>ジャンル</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>