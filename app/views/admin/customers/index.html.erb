<div class = "container">
  <h3 class = "ml-5 mb-5">会員一覧</h3>
  <div class = "row">
    <div class = "col-8 mx-auto">
      <table class = "table">
        <thead class = "table-secondary">
          <tr>
            <th class = "col-md-1">会員ID</th>
            <th class = "col-md-2">氏名</th>
            <th class = "col-md-2">メールアドレス</th>
            <th class = "col-md-2">ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_delete %>
              退会
              <% else %>
              有効
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>